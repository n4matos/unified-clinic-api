{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs", // Chave para CJS: imports sem .js
    "moduleResolution": "node", // Resolução clássica do Node
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
