# ==============================================
# APLICAÇÃO - CONFIGURAÇÕES PRINCIPAIS
# ==============================================

# Porta da aplicação
PORT=3000

# Ambiente (development | production | test)
NODE_ENV=development

# ==============================================
# AUTENTICAÇÃO JWT
# ==============================================

# Chave secreta do JWT (OBRIGATÓRIO em produção)
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production

# Tempo de expiração do token JWT
JWT_EXPIRES_IN=24h

# ==============================================
# BANCO DE DADOS - CLINICAS
# ==============================================

# URL de conexão com o banco de clínicas
CLINICS_DATABASE_URL=postgres://user:password@localhost:5432/unified_clinic_clinics

# Configurações do pool de conexões
CLINICS_DB_POOL_MIN=2
CLINICS_DB_POOL_MAX=10
CLINICS_DB_TIMEOUT=60000

# ==============================================
# BANCO DE DADOS - TENANTS (MULTI-TENANT)
# ==============================================

# Tenant 1 - PostgreSQL
TENANT_1_PG_CONN=postgres://user:password@localhost:5433/unified_clinic_tenant1

# Tenant 2 - MySQL
TENANT_2_MYSQL_CONN=mysql://user:password@localhost:3306/unified_clinic_mysql

# ==============================================
# LOGGING
# ==============================================

# Nível de log (debug | info | warn | error)
LOG_LEVEL=info

# Formato do log (development | production)
LOG_FORMAT=development

# ==============================================
# SEGURANÇA
# ==============================================

# CORS origins permitidas (separadas por vírgula)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate limiting - requests por minuto
RATE_LIMIT_MAX=100

# ==============================================
# CAMINHOS DE ARQUIVOS (DESENVOLVIMENTO)
# ==============================================

# Caminho para arquivo de banco SQLite (se usado)
DB_PATH=./data/clinic.db